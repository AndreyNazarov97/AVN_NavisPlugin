             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AVN_NavisPlugin.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="700" Title="Создание поисковых наборов по классификатору" ResizeMode="NoResize" Width="700" Height="250">
